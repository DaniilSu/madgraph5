	  CTLOOP(NLOOPLINE,PL,M2L,RES)
C  
%(info_lines)s
C 
C Interface between MG5 and CutTools.
C  
%(process_lines)s
C  
C  
C CONSTANTS 
C  
	  INTEGER    NEXTERNAL
      PARAMETER (NEXTERNAL=%(nexternal)d)	  
C  
C ARGUMENTS 
C
      INTEGER NLOOPLINE
      REAL*8 PL(0:3,NLOOPLINE)
      REAL*8 M2L(NLOOPLINE)
      COMPLEX*16 RES(3)
C  
C LOCAL VARIABLES 
C
	  REAL*8 LSCALE
	  REAL*8 THRS1
	  REAL*8 THRS2
	  COMPLEX*16 R1
	  INTEGER MPDIG
	  INTEGER RANK
	  LOGICAL STABLE,FORCEMP
C
C EXTERNAL FUNCTIONS
C
      EXTERNAL LOOPNUM
      EXTERNAL MPLOOPNUM
C
C GLOBAL VARIABLES
C
      include 'coupl.inc'
      COMPLEX*16 WE(20,NEXTERNAL)
	  INTEGER ID
	  COMMON/LOOP/WE,ID

C ----------
C BEGIN CODE
C ----------

C DEFAULT PARAMETERS FOR CUTTOOLS
C -------------------------------  
      RANK=NLOOPLINE
	  LSCALE=0.D0
	  DO I=1,NLOOPLINE
	  	LSCALE=LSCALE+DABS(PL(0,I)**2-PL(1,I)**2-PL(2,I)**2-PL(3,I)**2)
	  ENDDO
	  LSCALE=DSQRT(LSCALE/NLOOPLINE)
C TO FORCE CUT-TOOL TO USE MULTIPLE PRECISION
      FORCEMP=.FALSE.
C MPDIG IS THE NUMBER OF DIGITS USED IN THE MULTIPLE PRECISION SUBROUTINES
	  MPDIG=64
C THRS1 IS THE PRECISION LIMIT BELOW WHICH THE MP ROUTINES ACTIVATES
	  THRS1=1.D-2
C THRS1 IS THE NUMERICAL THRESHOLD FOR THE COLLINEAR/SOFT DIVERGENCES IN AVH_OLO ROUTINES	  
	  THRS2=1.D-6
C LOOPLIB SET WHAT LIBRARY CT USES
C 1 -> LOOPTOOLS
C 2 -> AVH
C 3 -> QCDLOOP
      LOOPLIB=2
C -------------------------------	  

      CALL CTSINIT(LSCALE,THRS1,MPDIG,LOOPLIB,MU_R)
      CALL CTSXCUT(LSCALE,MU_R,NLOOPLINE,LOOPNUM,MPLOOPNUM,RANK,PL,M2L,RES,R1,STABLE,FORCEMP)
	  RES(0)=RES(0)+R1

	  END
