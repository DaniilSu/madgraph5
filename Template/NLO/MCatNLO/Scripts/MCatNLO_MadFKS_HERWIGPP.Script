set /LHAPDF/MCNLOPDF:RemnantHandler /Herwig/Partons/HadronRemnants

set /Herwig/EventHandlers/LHEReader:PDFA /LHAPDF/MCNLOPDF
set /Herwig/EventHandlers/LHEReader:PDFB /LHAPDF/MCNLOPDF
